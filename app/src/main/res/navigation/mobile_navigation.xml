<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mt.greyfood.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_order"
        android:name="com.mt.greyfood.ui.order.OrderFragment"
        android:label="@string/title_order"
        tools:layout="@layout/fragment_basket" />

    <fragment
        android:id="@+id/navigation_basket"
        android:name="com.mt.greyfood.ui.basket.BasketFragment"
        android:label="@string/title_basket"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/navigation_campaigns"
        android:name="com.mt.greyfood.ui.campaigns.CampaignsFragment"
        android:label="@string/title_campaigns"
        tools:layout="@layout/fragment_campaigns" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.mt.greyfood.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
</navigation>